{
	"scripts": {
		"lint": "eslint --fix **/*.js",
		"format": "prettier --write **/*.html **/*.json",
		"compile-grammar": "nearleyc src/grammar.ne -o src/grammar.js",
		"test": "jasmine --fail-fast=true",
		"testmon": "npx nodemon --exec npm run test",
		"coverage": "nyc npx jasmine --fail-fast=false --stop-on-failure=false"
	},
	"nodemonConfig": {
		"watch": [
			"*.*",
			"grammar.ne"
		],
		"ignore": "grammar.js"
	},
	"nyc": {
		"exclude": "grammar.js",
		"statements": 80,
		"branches": 60,
		"functions": 80,
		"lines": 80,
		"skip-empty": true,
		"skip-full": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint  --fix",
			"test-coverage.bat"
		],
		"**/*.json": "prettier --write",
		"public/*.html": "prettier --write"
	},
	"devDependencies": {
		"adm-zip": "^0.5.4",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.3.8",
		"jasmine": "^3.6.4",
		"jsdom": "^16.5.1",
		"lint-staged": "^10.5.4",
		"nodemon": "^2.0.7",
		"nyc": "^15.1.0",
		"prettier": "^2.2.1"
	},
	"dependencies": {
		"nearley": "^2.20.1"
	}
}
